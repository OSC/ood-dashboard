<div class="col-sm-4 col-md-4">
  <div class="panel panel-default">
    <div class="panel-heading"><%= group.title %></div>
    <div class="list-group">

    <% OodAppGroup.groups_for(apps: group.apps, group_by: :subcategory).each_with_index do |g, index| %>
      <%= content_tag "p", g.title, class: "list-group-item header" unless g.title.empty? %>
      <%= render partial: "app", collection: g.apps %>
    <% end %>
    </div>
  </div>
</div>

