<% if Configuration.rss_announcements_url %>
  <div class="rss_announcements" data-url="<%= Configuration.rss_announcements_url %>"></div>
<% end %>

<% if Configuration.logo_img? %>
  <%= logo_image_tag(Configuration.logo_img) %>
<% end %>

<p class="lead">OnDemand provides an integrated, single access point for all of your HPC resources.</p>

<%=
  render(
    partial: "shared/insufficient_quota",
    locals: { quotas: @my_quotas }
  )
%>

<%= render partial: 'shared/welcome' %>

<br>

<%# This assumes @motd_file responds to `to_partial_path` %>
<%= render @motd if @motd %>

