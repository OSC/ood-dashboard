<% app.batch_connect.sub_app_list.select(&:valid?).each do |sub_app| %>
  <%= link_to new_batch_connect_session_context_path(token: sub_app.token),
    class: "list-group-item #{"active" if select_app && select_app == sub_app}",
    data: {
      content: manifest_markdown(sub_app.description),
      html: true,
      title: sub_app.title,
      container: "body"
  } do %>
    <%= app_icon_tag(app) %> <%= sub_app.title %>
    <%- if show_owner -%>
      <small>(<%= app.owner %>)</small>
    <%- end -%>
  <% end %>
<% end %>
