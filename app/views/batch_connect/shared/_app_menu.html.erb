<%- usr_app_groups.each do |app_group| -%>
  <%=
    render(
        partial: "batch_connect/shared/app_list",
        locals: {
          title: app_group.title,
          apps: app_group.apps,
          select_app: local_assigns[:select_app],
          group_by: :category,
          style: "ood-blue",
          show_owner: true
        }
    )
  %>
<%- end -%>
